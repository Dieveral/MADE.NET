<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    x:Class="MADE.App.Views.TextEntry"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="TextEntryTextStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="#DE000000" />
                <Setter Property="FontSize" Value="18" />
            </Style>

            <Style
              x:Key="TextEntryHeaderStyle" TargetType="Label">
                <Setter Property="LineBreakMode" Value="TailTruncation" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="#0078D7" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout x:Name="TextEntryContainer">
            <Label x:Name="TextEntryHeader" Style="{StaticResource TextEntryHeaderStyle}"/>
            <Entry x:Name="TextEntryContent" Style="{StaticResource TextEntryTextStyle}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>